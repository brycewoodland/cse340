<% if (title) { %>
<h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<%- messages() %>
    
<% if (errors) { %>
    <ul class="notice">
<% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
<%  }) %>
</ul>
<% } %>

<section class="add-classification-form">
    <p><i>FIELD IS REQUIRED</i></p>
    <form action="/inv/add-classification" method="POST">
        <label for="classification_name">Classification Name:</label>
        <hr>
        <small><i>Please enter a name without spaces or special characters.</i></small>
        <input type="text" id="classification_name" name="classification_name" pattern="^[a-zA-Z0-9]*$" required>
        <button type="submit">Add Classification</button>
    </form>
</section>