<% if (title) { %>
<h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>
    
<%# messages() %>

<section class="add-classification-form">
    <p><i>FIELD IS REQUIRED</i></p>
    <form action="/inventory/add-classification" method="POST">
        <label for="classificationName">Classification Name:</label>
        <hr>
        <small><i>Please enter a name without spaces or special characters.</i></small>
        <input type="text" id="classificationName" name="classificationName" pattern="^[^\s\W]+$" required>
        <button type="submit">Add Classification</button>
    </form>
</section>