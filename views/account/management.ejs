<% if (title) { %>
    <h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>
    
<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

<% if (account_type === 'Client' ) { %>
    <h2>Welcome <%= locals.accountData.account_firstname %>!</h2>
    <p><a href="/account/update/<%= accountData.account_id %>">Edit Account Information</a></p>
<% } else if (account_type === 'Employee') { %>
    <h2>Welcome <%= locals.accountData.account_firstname %>!</h2>
    <p><a href="/account/update/<%= accountData.account_id %>">Edit Account Information</a></p>
    <h3 id="inv-management">Inventory Management</h3>
    <p><a href="/inv">Inventory Management View</a></p>
<% } else { %>
    <h2>Welcome <%= locals.accountData.account_firstname %>!</h2>
    <p><a href="/account/update/<%= accountData.account_id %>">Edit Account Information</a></p>
    <h3 id="inv-management">Inventory Management</h3>
    <p><a href="/inv">Inventory Management View</a></p>
    <h3 id="inv-management">Items Pending Approval</h3>
    <p><a href="/account/unapproved-items/">Manage Pending Approvals</a></p>
<% } %>
    
<div>
    <p>You're logged in.</p>
</div>