<% if (title) { %>
    <h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>
    
<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

<section class="login-container">
<form class="loginForm" action="/account/login" method="post">
        <label for="account_email">Email:</label>
        <input id="account_email" type="email" name="account_email" value="<%= locals.account_email %>" required>
        <label for="account_password">Password:</label>
        <input id="account_password" type="password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
        <p><i>Passwords must be minimum of 12 characters and include 1 capital letter, 1 number and 1 special character.</i></p>
        <button>LOGIN</button>
</form>
    <div>
        <h4 id="sign-up">No account? <a href="/account/register">Sign-up</a></h4>
    </div>
</section>