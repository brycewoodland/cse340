<% if (title) { %>
    <h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>
    
<%- messages() %>

<section class="login-container">
<form class="loginForm" action="/account/login" method="post">
    <div class="form">
        <label for="username">Email:</label>
        <input id="username" type="text" name="username" value="" required>
        <label for="password">Password:</label>
        <input id="password" type="password" name="password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
        <p><i>Passwords must be minimum of 12 characters and include 1 capital letter, 1 number and 1 special character.</i></p>
        <button>LOGIN</button>
    </div>
    <div>
        <h4 id="sign-up">No account? <a href="/account/register">Sign-up</a></h4>
    </div>
</section>